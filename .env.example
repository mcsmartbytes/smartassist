# Supabase Configuration (required for data persistence)
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI API Key (optional - for AI-powered intent recognition)
# Without this, the assistant uses keyword matching
VITE_OPENAI_API_KEY=your_openai_api_key

# Tavily API Key (for web search/research)
# Get one at: https://tavily.com
VITE_TAVILY_API_KEY=your_tavily_api_key

# Microsoft Graph (for Outlook email and calendar)
# Get these from Azure Portal: https://portal.azure.com
VITE_MICROSOFT_CLIENT_ID=your_azure_app_client_id
VITE_MICROSOFT_REDIRECT_URI=http://localhost:5173

# Twilio (for SMS messaging)
# Get these from: https://console.twilio.com
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_API_KEY_SID=your_twilio_api_key_sid
VITE_TWILIO_API_KEY_SECRET=your_twilio_api_key_secret
VITE_TWILIO_PHONE_NUMBER=+1234567890
